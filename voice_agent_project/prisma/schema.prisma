generator client {
  provider = "prisma-client-py"
  recursive_type_depth = -1
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CallAnalysis {
  id            Int      @id @default(autoincrement())
  call_id       String   @unique
  sentiment     String
  interest_level Boolean
  intro_clarity Boolean
  objections    Json
  outcome       String
  language      String
  transcript    String?  @default("") // Added transcript field
  created_at    DateTime @default(now())
}

model FollowUp {
  id         Int      @id @default(autoincrement())
  call_id    String   @unique
  status     String
  created_at DateTime @default(now())
}